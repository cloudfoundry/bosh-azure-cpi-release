#!/usr/bin/env ruby
# frozen_string_literal: true

$LOAD_PATH.unshift File.expand_path('../lib', __dir__)

require 'bosh_azure_cpi'
require 'irb'
require 'irb/completion'
require 'ostruct'
require 'optparse'

config_file = nil

opts_parser = OptionParser.new do |opts|
  opts.on('-c', '--config FILE') { |file| config_file = file }
end

opts_parser.parse!

unless config_file
  puts opts_parser
  exit(1)
end

@config = Psych.load_file(config_file)

module ConsoleHelpers
  def cpi
    if @cpi.nil?
      Bosh::AzureCloud::Config.instance.update(@config)
      @cpi = Bosh::AzureCloud::Cloud.new
    end
    @cpi
  end

  def registry
    cpi.registry
  end
end

std_out_logger = Bosh::AzureCloud::CPILogger.instance.get_logger(STDOUT)
Bosh::AzureCloud::CPILogger.instance.logger = std_out_logger

cloud_config = OpenStruct.new(logger: std_out_logger)

Bosh::Clouds::Config.configure(cloud_config)

include ConsoleHelpers

begin
  require 'ruby-debug'
  puts '=> Debugger enabled'
rescue LoadError
  puts '=> ruby-debug not found, debugger disabled'
end

puts '=> Welcome to BOSH Azure CPI console'
puts "You can use 'cpi' to access CPI methods"

IRB.start
